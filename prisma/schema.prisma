// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id                Int     @id @default(autoincrement())
  original_title    String
  tmdb_id           Int
  poster_path       String @default("")
  user              User[] @relation("UserAddedMovies", fields: [userId], references: [id])
  userId            Int
}

model User {
  id                Int @id @default(autoincrement())
  email             String @unique
  name              String
  password          String
  movies            Movie[] @relation("UserAddedMovies")
}